{
  "name": "loreweaver",
  "main": "index.js",
  "version": "1.0.17",
  "description": "LoreWeaver - AI Worldbuilding Hub for writers, game masters, and creators",
  "author": "LightWraith8268",
  "scripts": {
    "start": "expo start",
    "start-web": "expo start --web",
    "start-web-dev": "DEBUG=expo* expo start --web",
    "lint": "expo lint",
    "build:web": "npx expo export --platform web && node scripts/fix-electron-paths.js",
    "build:android": "eas build --platform android --profile preview",
    "build:android-apk": "eas build --platform android --profile preview --local",
    "build:ios": "eas build --platform ios",
    "start-electron": "electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:8083 && electron .\"",
    "build:electron": "npm run build:web && npm run electron:build",
    "dist": "npm run build:web && npm run electron:build -- --publish=never",
    "electron:build": "node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('package.json'));pkg.main='public/electron.js';fs.writeFileSync('package.json',JSON.stringify(pkg,null,2));\" && electron-builder --win && node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('package.json'));pkg.main='index.js';fs.writeFileSync('package.json',JSON.stringify(pkg,null,2));\"",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "version:update": "node scripts/update-version.js",
    "build:win": "node scripts/build-windows.js",
    "test:win": "cd win/unpacked && LoreWeaver.exe"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@nkzw/create-context-hook": "^1.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-firebase/app": "^23.3.1",
    "@react-native-firebase/auth": "^23.3.1",
    "@react-native-firebase/firestore": "^23.3.1",
    "@react-native-firebase/storage": "^23.3.1",
    "@react-navigation/drawer": "^7.5.8",
    "@react-navigation/native": "^7.1.6",
    "@stardazed/streams-text-encoding": "^1.0.2",
    "@tanstack/react-query": "^5.83.0",
    "@ungap/structured-clone": "^1.3.0",
    "expo": "^53.0.4",
    "expo-blur": "~14.1.4",
    "expo-build-properties": "~0.14.8",
    "expo-constants": "~17.1.4",
    "expo-font": "~13.3.0",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "~14.1.4",
    "expo-linking": "~7.1.4",
    "expo-location": "~18.1.4",
    "expo-router": "~5.1.6",
    "expo-screen-orientation": "~8.1.7",
    "expo-splash-screen": "~0.30.7",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.4",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "^14.2.0",
    "firebase": "^12.2.1",
    "lucide-react-native": "^0.475.0",
    "mammoth": "^1.10.0",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-web": "^0.20.0",
    "zustand": "^5.0.2",
    "react-native-reanimated": "~3.17.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/ngrok": "^4.1.0",
    "@types/react": "~19.0.10",
    "concurrently": "^8.2.2",
    "electron": "^38.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^9.31.0",
    "eslint-config-expo": "^9.2.0",
    "typescript": "~5.8.3",
    "wait-on": "^7.2.0"
  },
  "private": true,
  "build": {
    "appId": "com.loreweaver.app",
    "productName": "LoreWeaver",
    "directories": {
      "output": "dist-temp"
    },
    "files": [
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "assets/images",
        "to": "assets/images"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
